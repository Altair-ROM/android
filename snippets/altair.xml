<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote  name="altair"
             fetch="ssh://git@github.com"
             revision="refs/heads/o"
             sync-c="true"
             sync-j="4" />

    <remote  name="lineage"
             fetch="https://github.com/LineageOS"
             revision="refs/heads/lineage-15.1"
             sync-c="true"
             sync-j="4" />

    <remote  name="tm"
             fetch="https://github.com/TheMuppets"
             revision="refs/heads/lineage-15.1"
             sync-c="true"
             sync-j="4" />

    <!-- Get rid of LineageOS repos -->
    <remove-project name="LineageOS/android" />
    <remove-project name="LineageOS/android_build" />
    <remove-project name="LineageOS/android_build_soong" />
    <remove-project name="LineageOS/android_frameworks_base" />
    <remove-project name="LineageOS/android_lineage-sdk" />
    <remove-project name="LineageOS/android_packages_apps_LineageParts" />
    <remove-project name="LineageOS/android_packages_apps_Settings" />
    <remove-project name="LineageOS/android_packages_apps_SetupWizard" />
    <remove-project name="LineageOS/android_packages_apps_Updater" />
    <remove-project name="LineageOS/android_system_sepolicy" />
    <remove-project name="LineageOS/android_vendor_lineage" />

    <!-- Add Altair ROM repos -->
    <project path="android" name="Altair-ROM/android" remote="altair" />
    <project path="build/make" name="Altair-ROM/android_build" remote="altair" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>
    <project path="build/soong" name="Altair-ROM/android_build_soong" remote="altair" />
    <project path="frameworks/base" name="Altair-ROM/android_frameworks_base" remote="altair" />
    <project path="lineage-sdk" name="Altair-ROM/android_platform_sdk" remote="altair" />
    <project path="packages/apps/LineageParts" name="Altair-ROM/android_packages_apps_Parts" remote="altair" />
    <project path="packages/apps/Settings" name="Altair-ROM/android_packages_apps_Settings" remote="altair" />
    <project path="system/sepolicy" name="Altair-ROM/android_system_sepolicy"  remote="altair" />
    <project path="vendor/altair" name="Altair-ROM/android_vendor_altair" remote="altair" />
</manifest>
