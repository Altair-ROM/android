<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote  name="altair"
             fetch="https://github.com"
             revision="refs/heads/n"
             sync-c="true"
             sync-j="4" />

    <remote  name="lineage"
             fetch="https://github.com/LineageOS"
             revision="refs/heads/cm-14.1"
             sync-c="true"
             sync-j="4" />

    <remote  name="tm"
             fetch="https://github.com/TheMuppets"
             revision="refs/heads/cm-14.1"
             sync-c="true"
             sync-j="4" />

    <!-- Get rid of LineageOS repos -->
    <remove-project name="LineageOS/android" />
    <remove-project name="LineageOS/android_build" />
    <remove-project name="LineageOS/android_device_qcom_sepolicy" />
    <remove-project name="LineageOS/android_frameworks_base" />
    <remove-project name="LineageOS/android_frameworks_native" />
    <remove-project name="LineageOS/android_packages_apps_CMParts" />
    <remove-project name="LineageOS/android_packages_apps_Contacts" />
    <remove-project name="LineageOS/android_packages_apps_ContactsCommon" />
    <remove-project name="LineageOS/android_packages_apps_Dialer" />
    <remove-project name="LineageOS/android_packages_apps_ExactCalculator" />
    <remove-project name="LineageOS/android_packages_apps_PackageInstaller" />
    <remove-project name="LineageOS/android_packages_apps_PhoneCommon" />
    <remove-project name="LineageOS/android_packages_apps_Settings" />
    <remove-project name="LineageOS/android_packages_apps_SetupWizard" />
    <remove-project name="LineageOS/android_packages_apps_Updater" />
    <remove-project name="LineageOS/android_packages_apps_WallpaperPicker" />
    <remove-project name="LineageOS/android_system_sepolicy" />
    <remove-project name="LineageOS/android_vendor_cm" />
    <remove-project name="LineageOS/cm_platform_sdk" />

    <!-- Get rid of AOSP repos -->
    <remove-project name="platform/external/noto-fonts" />

    <!-- Add Altair ROM repos -->
    <project path="build" name="AltairROM/android_build" remote="altair" >
        <copyfile src="core/root.mk" dest="Makefile" />
    </project>
    <project path="android" name="AltairROM/android" remote="altair" />
    <project path="device/qcom/sepolicy" name="Altair-Devices/android_device_qcom_sepolicy" remote="altair" />
    <project path="external/noto-fonts" name="AltairROM/android_external_noto-fonts" remote="altair" />
    <project path="frameworks/base" name="AltairROM/android_frameworks_base" remote="altair" />
    <project path="frameworks/native" name="AltairROM/android_frameworks_native" remote="altair" />
    <project path="packages/apps/CMParts" name="AltairROM/android_packages_apps_CMParts" remote="altair" />
    <project path="packages/apps/Contacts" name="AltairROM/android_packages_apps_Contacts" remote="altair" />
    <project path="packages/apps/ContactsCommon" name="AltairROM/android_packages_apps_ContactsCommon" remote="altair" />
    <project path="packages/apps/Dialer" name="AltairROM/android_packages_apps_Dialer" remote="altair" />
    <project path="packages/apps/ExactCalculator" name="AltairROM/android_packages_apps_ExactCalculator" remote="altair" />
    <project path="packages/apps/PackageInstaller" name="AltairROM/android_packages_apps_PackageInstaller" remote="altair" />
    <project path="packages/apps/PhoneCommon" name="AltairROM/android_packages_apps_PhoneCommon" remote="altair" />
    <project path="packages/apps/Settings" name="AltairROM/android_packages_apps_Settings" remote="altair" />
    <project path="packages/apps/WallpaperPicker" name="AltairROM/android_packages_apps_WallpaperPicker" remote="altair" />
    <project path="system/sepolicy" name="AltairROM/android_system_sepolicy" remote="altair" />
    <project path="vendor/altair" name="AltairROM/android_vendor_altair" remote="altair" />
    <project path="vendor/cmsdk" name="AltairROM/cm_platform_sdk" remote="altair" />

    <!-- Track ThemeInterfacer -->
    <project path="packages/services/ThemeInterfacer" name="substratum/interfacer" remote="github" revision="n-rootless" />

    <!-- Add Dirty Unicorns DUI repos -->
    <project path="external/DUtils" name="AltairROM/android_external_DUtils" remote="altair" />
    <project path="packages/apps/DUI" name="AltairROM/android_packages_apps_DUI" remote="altair" />
</manifest>
